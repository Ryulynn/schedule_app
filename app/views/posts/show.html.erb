<div class="content_div">
    <h1>スケジュール詳細</h1>
    <table border="1">
        <tr>
            <th>タイトル</th>
            <td>
                <%= @post.title %>
            </td>
        </tr>
        <tr>
            <th>開始日</th>
            <td>
                <%= @post.start_date.to_s(:custom_date) %>
            </td>
        </tr>
        <tr>
            <th>終了日</th>
            <td>
                <%= @post.end_date.to_s(:custom_date) %>
            </td>
        </tr>
        <tr>
            <th>終日</th>
            <td>
                <% if @post.all_day == 1 %> <!-- all_dayは、終日にチェックされた場合「１」、そうでない場合は「０」が格納されている。 -->
                    <%= p "○"  %>
                <% else %>
                    <%= p "" %>
                <% end %>
            </td>
        </tr>
        <tr>
            <th>スケジュールメモ</th>
            <td>
                <%= @post.memo %>
            </td>
        </tr>
    </table>
    <div>
        <%= link_to "スケジュール一覧", :posts %>
    </div>
    <div>
        <%= link_to "スケジュール編集", :edit_post %>
    </div>
    <div>
        <%= link_to "スケジュール削除", "/posts/#{@post.id}/", method: :delete %>
    </div>
</div>

<footer>
    <h1>本日の日付：<%= p "#{Date.today.year}/#{Date.today.month}/#{Date.today.day}" %></h1>
</footer>